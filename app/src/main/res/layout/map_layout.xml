<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="200dp"
    android:id="@+id/mapPanel"
    android:layout_height="match_parent"
    android:visibility="gone">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/findMeMap"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="?android:selectableItemBackground"
        android:drawableLeft="@drawable/findme"
        android:text="@string/findMeOnMap"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/placeMeOnMap"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:padding="15dp"
        android:background="?android:selectableItemBackground"
        android:drawableLeft="@drawable/place_me"
        android:text="@string/placeMeOnMap"/>


</LinearLayout>